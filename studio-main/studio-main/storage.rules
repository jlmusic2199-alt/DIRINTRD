rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow read access on all files to anyone with the URL.
    // This is safe because URLs are unguessable.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users (your team) to write to job-related folders.
    // This includes updates, approvals, or any other file related to a job.
    // A size limit is added to prevent abuse (e.g., 10MB per file).
    match /jobs/{jobId}/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
